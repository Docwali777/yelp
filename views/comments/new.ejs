<h1>New Comments Form</h1>

<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 class='text-center'>Add New Comment to <%= campgrounds.name %> </h1>
<div style='width: 30%; margin: 25px auto'>
  <form action="/campgrounds/<%= campgrounds._id %>/comments" method="POST">
  <div class="form-group">
    <input class='form-control' type="text" name="comments[text]" value="" placeholder="text">
  </div>
  <div class="form-group">
      <input class='form-control' type="text" name="comments[author]" value="" placeholder="author">
  </div>

  <div class="form-group">
    <button class='btn btn-lg btn-primary btn-block' type="submit">Submit</button>

  </div>
  </form>
<a href="/campgrounds">Go Back</a>
</div>


  </div>
</div>
