<% include ../partials/header %>
  <div class='container'>
    <div class="row">
      <div class="col-md-3">
        <p class='lead'>Yelp Camp</p>

    <div class="list-group">
        <li class="list-group-item active">1</li>
      <li class="list-group-item">2</li>
      <li class="list-group-item">3</li>
    </div>
      </div>

      <div class="col-md-9">
        <div class="thumbnail">
  <img class='image-responsive' src="<%= campgrounds.image %>" alt="">
<div class="captin-full">
  <h4 class="pull-right">$9.00 / night</h4>
  <h4><a href=""><%= campgrounds.name %></a></h4>
  <p>
    <%= campgrounds.description %>
  </p>
</div>
        </div>
        <div class="well">
          <div class="text-right">
                    <a href="/campgrounds/<%= campgrounds._id %>/comments/new"><button class='btn btn-success'>Add New Comment</button></a>
          </div>
          <%  campgrounds.comments.forEach(comments=>{  %>

              <div class="row">
                <div class="col-md-12">
                <strong>  <%= comments.author %></strong>
                  <span class="pull-right">10 days ago</span>
                  <p>
                          <%= comments.text %>
                  </p>
                  <hr>
                </div>
              </div>


            <%    }) %>
        </div>
      </div>


    </div>

    <a href="/campgrounds"><button class='btn btn-primary' type="button" name="button">Go Back to Campgrounds</button></a>

  </div>
